extends base.pug
block content
    section#login 
        h1.heading.center Order Online
        form#loginForm.orderForm
            h3.center.orderAlert
            .loginDetail 
                label(for="name") Name:
                input(type="text" id="name" name="name" placeholder="Enter your name") 
            .loginDetail 
                label(for="phone") Phone No.:
                input(type="text" id="phone" name="phone" minlenght="10" placeholder="Enter your phone number") 
            .loginDetail
                label(for="order") Select your order:
                select#order(name="order") 
                    option(value="Red Velvet Cake") Red Velvet Cake      
                    option(value="Pizza") Pizza      
                    option(value="Cookies") Cookies      
                    option(value="Choco Cake") Choco Cake  
                    option(value="Strawberry Cupcake") Strawberry cupcake 
            .loginDetail 
                label(for="quantity") Quantity:
                select#quantity(name="quantity")
                    option(value="1") 1      
                    option(value="2") 2       
                    option(value="3") 3      
                    option(value="4") 4    
                    option(value="5") 5     
                    option(value="6") 6     
            .loginDetail 
                label(for="address") Address:
                textarea#address(name="address", cols="30", rows="5" placeholder="Enter your address") 
            button.btn.send Order now

